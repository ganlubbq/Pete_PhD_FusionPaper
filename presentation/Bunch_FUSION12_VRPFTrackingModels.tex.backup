\begin{frame}{3D Intrinsic Coordinate Tracking}
\begin{IEEEeqnarray*}{rCl}
\dot{s}(t)            & = & a_{T,k} \\
\dot{\mathbf{e}}_T(t) & = & \frac{a_{N,k}}{s(t)} \mathbf{e}_N(t) \\
\dot{\mathbf{e}}_N(t) & = & - \frac{a_{N,k}}{s(t)} \mathbf{e}_T(t) \\
\dot{\mathbf{e}}_B(t) & = & \mathbf{0}     .
\end{IEEEeqnarray*}
\end{frame}

